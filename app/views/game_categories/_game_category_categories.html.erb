<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Categories

    <a data-toggle="collapse" href="#game_category_categories_new_form">
      Add game
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @game_category.categories.each do |game| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to game, game %>

        <%= link_to game, method: :delete, data: { confirm: "Do you really want to delete this game" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="game_category_categories_new_form">
        <%= render partial: "game_categories/game_category_categories_new_form" %>
      </div>
    </div>

  </ul>
</div>
