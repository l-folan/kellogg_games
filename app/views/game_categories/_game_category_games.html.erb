<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Games

    <a data-toggle="collapse" href="#game_category_games_new_form">
      Add game
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @game_category.games.each do |game| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to game, game %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to game, method: :delete, data: { confirm: "Do you really want to delete this game" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="game_category_games_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
