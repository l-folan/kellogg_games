<%= form_with(model: @game, local: true) do |f| %>

  <%= f.hidden_field :host_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>

    <%= f.date_select :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :time %>

    <%= f.date_select :time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :max_attendees %>

    <%= f.text_field :max_attendees, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :game_category_id %>

    <%= f.collection_select :game_category_id, GameCategory.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :loction %>

    <%= f.text_field :loction, class: "form-control" %>
  </div>

  <%= f.submit "Create game", class: "btn btn-block btn-outline-secondary" %>
<% end %>
