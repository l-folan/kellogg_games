<!-- Form message start -->
<%= form_with(model: @message, local: true) do |f| %>
<!-- Form message end -->

  <!-- Label and input for author_id start -->
  <div class="form-group">
    <%= f.label :author_id %>

    <!-- Input for author_id start -->
    <%= f.collection_select :author_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for author_id end -->
  </div>
  <!-- Label and input for author_id end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for game_id start -->
  <!-- Input for game_id start -->
  <%= f.hidden_field :game_id, value: @game.id %>
  <!-- Input for game_id end -->
  <!-- Label and input for game_id end -->

  <%= f.submit "Create message", class: "btn btn-block btn-outline-secondary" %>
<% end %>
