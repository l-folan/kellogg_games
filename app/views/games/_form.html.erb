<% was_validated = game.errors.any? %>

<%= form_with(model: game, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for host_id start -->
  <div class="form-group">
    <% host_class = "form-control" %>
    <% host_was_invalid = game.errors.include?(:host) %>

    <% if was_validated %>
      <% if host_was_invalid %>
        <% host_class << " is-invalid" %>
      <% else %>
        <% host_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :host_id %>
    <!-- Input for host_id start -->
    <%= f.number_field :host_id, class: host_class, placeholder: "Enter host" %>
    <!-- Input for host_id end -->
    <% if host_was_invalid %>
      <% game.errors.full_messages_for(:host).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for host_id end -->
  <!-- Label and input for description start -->
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = game.errors.include?(:description) %>

    <% if was_validated %>
